<div class="container">
  <div class="row">
    <div class="span6 offset3">
       <div class="well well large">
         <%= simple_form_for(@professional) do |f| %>
         <%= f.error_notification %>

           <div class="form-inputs">
             <%= f.input :name, :label => "Nombre" %>
             <%= f.input :profession, :label => "Profesión" %>
             <%= f.input :speciality, :label => "Especialidad" %>
             <%= f.input :address, :label => "Dirección" %>
             <%= f.input :clinic, :label => "Clinica" %>
             <%= f.input :education, :label => "Educacion" %>
             <%= f.input :information, :label => "Información" %>
             <%= f.input :picture, :label => "Foto" %>
             <%= f.input :experience, :label => "Experiencia" %>
             <%= f.input :market_price %>
             <%= f.input :saving_price %>
             <%= f.input :final_price %>
             <%= f.input :longitude %>
             <%= f.input :latitude %>
             <%= f.input :gmaps %>
  


            </div class="field">
             <% Service.all.each do |service| %>
             <%= check_box_tag "professional[service_ids][]", service.id, @professional.services.include?(service) %>
             <%= label_tag dom_id(service), service.name %><br>
             <% end %>
           </div>

          <div class="form-actions">
           <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>  
