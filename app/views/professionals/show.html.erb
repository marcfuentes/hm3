
  <article class='row-fluid'>

          <div class="row-fluid">
            <div class="picture span2 offset1 ">
              <%= image_tag(@professional.picture_url, :width => "60%") if @professional.picture.present? %>

            </div>

           <div class="main_info span4">
             <h3><%= @professional.name %></h3>

             <h4> <%= @professional.profession %></h3>
             
             <h5> <%= @professional.speciality %></h5>

             <p> <%= @professional.experience %> a√±os de experiencia
             </p>
            </div>

            <div class="social_buttons span4 "> 
              
              <%= gmaps( :map_options => { :container_class => "map_container_renamed" }, "markers" => {"data" => @json, "options" => {"auto_zoom" => false} }) %>
             
          </div>    
           
       
          
            <div class="row-fluid">
  
                <div class="biography span6 offset1 "> 
                  <div class="well well large">

                    <h4>Biografia</h4></br>

                    <p><%= @professional.information %></p>

                 </div>
               </div>

    

          <div class="info_details span4 "> 
            <div class="well well large">

              <h4>Detalles</h4></br>

              <p><i class="icon-book"></i> <%= @professional.education %></p>
        
              <p><i class="icon-hospital"></i> <%= @professional.clinic %></p>


              <p><i class="icon-map-marker"> </i><%= @professional.address %></p>
           </div>     
         </div>

        </div>


        <div class="row-fluid">
  
                <div class="services_pro span4 offset1 "> 
                  <div class="well well large">

                    <h4>Servicios</h4></br>

                      <p><% @professional.services.each do |service| %>
                         <%= service.name %></p>

                          <% end %>
                      
                    </div>
                 </div>
        </div>

        
        
 

  


          <% if can? :update, @professional %>
          <%= link_to 'Edit', edit_professional_path(@professional), class: "btn btn btn-default" %> 
          <% end %>
          

