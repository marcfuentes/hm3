

<%= simple_form_for :contact_form, url: messages_path, method: :post do |f| %>
 <%= f.error_notification %>

  
    <%= f.input :name, label: 'Nombre' %>
    <%= f.input :email, label: 'Email ' %>
    <%= f.input :message_title, label: 'Titulo' %>
    <%= f.input :message_body, label: 'Tu Mensaje', as: :text , input_html:{ rows: "8" } %>

  
    <%= f.submit 'Enviar', class: 'btn-large btn-info'  %>
    <% end %>
